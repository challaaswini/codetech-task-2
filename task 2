            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            text-align: center;
            max-width: 400px;
            width: 100%;
        }

        h1 {
            font-size: 2em;
            color: #007BFF;
            margin-bottom: 20px;
        }

        .search {
            margin-bottom: 20px;
            display: flex;
            justify-content: center;
        }

        input[type="text"] {
            padding: 12px;
            width: 70%;
            border-radius: 4px;
            border: 1px solid #ccc;
            font-size: 1em;
        }

        button {
            padding: 12px 20px;
            border-radius: 4px;
            border: none;
            background-color: #007BFF;
